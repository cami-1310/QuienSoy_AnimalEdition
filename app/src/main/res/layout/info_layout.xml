<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/info"
    android:background="#FFFFFFFF"
    android:padding="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tamano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/shadowsintolighttwo_regular"
            android:textSize="20dp"
            android:text="TamaÃ±o: " />

        <TextView
            android:id="@+id/peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/shadowsintolighttwo_regular"
            android:text="Peso: "
            android:textSize="20dp"/>

        <ImageView
            android:id="@+id/peligrosidad_titulo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/peligrosidad"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/peligro_texto"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="texto"
            android:fontFamily="@font/shadowsintolighttwo_regular"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/habitat_titulo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/habitat"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/habitat_texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:text="texto sobre habitat"
            android:textSize="18dp"
            android:fontFamily="@font/shadowsintolighttwo_regular"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/generalidades_texto"
            android:textColor="#1E3051"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/shadowsintolighttwo_regular"
            android:text="Generalidades: " />

        <ImageView
            android:id="@+id/apariencia_titulo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/apariencia"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/apariencia_texto"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="texto sobre apariencia"
            android:fontFamily="@font/shadowsintolighttwo_regular"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/dieta_titulo"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/dieta"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/dieta_texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:text="texto sobre dieta"
            android:fontFamily="@font/shadowsintolighttwo_regular"
            android:textSize="18dp"/>
    </LinearLayout>
</LinearLayout>