<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#FFFFFF">

    <!--controles de sonido-->
    <com.example.proyectofinal.Controles
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="!Elige una categorÃ­a!"
            android:fontFamily="@font/slackey_regular"
            android:textColor="#1E3051"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal">
        </TextView>

        <ImageButton
            android:id="@+id/btnAgua"
            android:layout_width="800px"
            android:layout_height="300px"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            android:background="@null"
            android:src="@drawable/btn_agua"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:id="@+id/btnAire"
            android:layout_width="800px"
            android:layout_height="300px"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            android:background="@null"
            android:src="@drawable/btn_aire"
            android:layout_gravity="center_horizontal"/>

        <ImageButton
            android:id="@+id/btnTierra"
            android:layout_width="800px"
            android:layout_height="300px"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            android:background="@null"
            android:src="@drawable/btn_tierra"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</FrameLayout>