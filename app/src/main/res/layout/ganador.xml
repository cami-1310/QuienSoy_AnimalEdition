<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="¡Felicidades Explorador!"
            android:fontFamily="@font/slackey_regular"
            android:textColor="#1E3051"
            android:textSize="35dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal">
        </TextView>

        <ImageView
            android:layout_width="238dp"
            android:layout_height="260dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_final">
        </ImageView>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Haz terminado con esta categoría"
            android:fontFamily="@font/slackey_regular"
            android:textColor="#1E3051"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">
        </TextView>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="¿Qué quieres hacer ahora?"
            android:fontFamily="@font/slackey_regular"
            android:textColor="#1E3051"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp">
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btnAgain"
                android:src="@drawable/play"
                android:background="@drawable/formato_btn"
                android:layout_width="300px"
                android:layout_height="90px"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:layout_margin="5dp"/>

            <ImageButton
                android:id="@+id/btnLearn"
                android:src="@drawable/learn"
                android:background="@drawable/formato_btn"
                android:layout_width="300px"
                android:layout_height="90px"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:layout_margin="5dp"/>

            <ImageButton
                android:id="@+id/btnSalir"
                android:src="@drawable/btn_salir"
                android:background="@drawable/formato_btn"
                android:layout_width="300px"
                android:layout_height="90px"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:layout_margin="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <!--controles de sonido-->
    <com.example.proyectofinal.Controles
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>